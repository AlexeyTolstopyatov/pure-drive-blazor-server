@page "/connection"

<h3>Информация о соединении</h3>
@using puredrive.Pages.Private
@using Microsoft.Data.SqlClient

@code {
    public string[] Info
    {
        get
        {
            string[] result = new string[4];

            using (SqlConnection connection = new SqlConnection
                ("SERVER=nidompc\\sqlexpress;DATABASE=stroy;trusted_connection=true;TrustServerCertificate=true"))
            {
                connection.Open();
                result[0] += $"{connection.Database}";
                result[1] += $"{connection.DataSource}";
                result[2] += $"{connection.WorkstationId}";
                result[3] += $"{connection.ServerProcessId}";
                connection.Close();
            }

            return result;
        }
    }
}
<table>
    @for(int i = 0; i < Info.Length; i++)
    {
        <tr>
            @switch(i)
            {
                case 0:
                    <th>База данных</th>
                    break;
                case 1:
                    <th>Сервер</th>
                    break;
                case 2:
                    <th>Машина</th>
                    break;
                case 3:
                    <th>Процесс (PID)</th>
                    break;
            }
            <th>@Info[i]</th>
        </tr>
    }
</table>

<div class="alert alert-heading">
